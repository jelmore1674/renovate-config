{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Override missing or wrong metadata",
	"packageRules": [
		{
			"description": "override registry url and datasource for gitea actions",
			"matchPackageNames": [
				"actions/release",
				"https://git.justinelmore.dev/actions/release"
			],
			"overrideDatasource": "gitea-tags",
			"registryUrls": ["https://git.justinelmore.dev"]
		}
	],
	"hostRules": [
		{
			"description": "Make renovate know this is a gitea compatible host",
			"matchHost": "git.justinelmore.dev",
			"hostType": "gitea"
		}
	]
}
