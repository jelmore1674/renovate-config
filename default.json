{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "default base preset for renovate config",
	"extends": ["config:best-practices", "renovate/renovate-config//meta.json"],
	"reviewers": ["jelmore1674"],
	"automergeStrategy": "squash",
	"packageRules": [
		{
			"description": "pin actions/release v2",
			"matchPackageNames": [
				"actions/release",
				"https://forgejo.justinelmore.dev/actions/release"
			],
			"matchManagers": ["github-actions"],
			"matchCurrentValue": "/^v2$/",
			"replacementVersion": "v2.6.0"
		}
	]
}
